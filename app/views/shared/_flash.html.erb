<% if flash.any? %>
  <div class="ui fluid raised card">
    <div class="content">
      <% flash.each do |name, msg| %>
          <div class='<%= "#{name}" %>' >
            <a href="#" class="close" data-dismiss="alert">
              &#215;
            </a>
            <%= content_tag :div, msg, :id=> "flash_#{name}" if msg.is_a?(String) %>
          </div>
      <% end %>
    </div>
  </div>
<% end %>
