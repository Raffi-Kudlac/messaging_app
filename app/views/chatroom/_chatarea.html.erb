<div class="ui fluid raised card chatbox">
  <div class="content">
    <div class="ui feed">

      <%= render partial: "chatroom/messages", collection: @messages, as: :message %>
    </div>
  </div>
  <div class="extra content">
    <form class="ui reply form">
      <div class="field">
        <div class="ui fluid icon input">
          <input type="text" placeholder="Enter a message">
          <i class="boerdered inverted blue icon edit"></i>
        </div>
      </div>
    </form>
  </div>
</div>
